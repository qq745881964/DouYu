<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.example.wwwqq.douyu.utils.ZhuYe_ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="0dp"></com.example.wwwqq.douyu.utils.ZhuYe_ViewPager>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_weight="1.9"
        android:orientation="horizontal"
        android:background="@color/baise"
        android:layout_height="0dp">

        <RadioButton
            android:id="@+id/r1"
            android:layout_weight="1"
            android:button="@null"
            android:text="首页"
            android:gravity="center"
            android:drawableTop="@drawable/home"
            android:checked="true"
            android:textColor="@color/chengse"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_weight="1"
            android:button="@null"
            android:text="直播"
            android:gravity="center"
            android:textColor="@color/huise"
            android:drawableTop="@drawable/live"
            android:checked="false"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_weight="1"
            android:button="@null"
            android:text="视频"
            android:gravity="center"
            android:textColor="@color/huise"
            android:drawableTop="@drawable/video"
            android:checked="false"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/r4"
            android:layout_weight="1"
            android:button="@null"
            android:text="关注"
            android:gravity="center"
            android:textColor="@color/huise"
            android:drawableTop="@drawable/follow"
            android:checked="false"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/r5"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:gravity="center"
            android:textColor="@color/huise"
            android:drawableTop="@drawable/user"
            android:checked="false"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </RadioGroup>

</LinearLayout>